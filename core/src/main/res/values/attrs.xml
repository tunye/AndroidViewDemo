<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialRippleLayout">
        <attr name="mrl_rippleColor" format="color" />
        <attr name="mrl_rippleDimension" format="dimension" />
        <attr name="mrl_rippleOverlay" format="boolean" />
        <attr name="mrl_rippleAlpha" format="float" />
        <attr name="mrl_rippleDuration" format="integer" />
        <attr name="mrl_rippleFadeDuration" format="integer" />
        <attr name="mrl_rippleHover" format="boolean" />
        <attr name="mrl_rippleBackground" format="color" />
        <attr name="mrl_rippleDelayClick" format="boolean" />
        <attr name="mrl_ripplePersistent" format="boolean" />
        <attr name="mrl_rippleInAdapter" format="boolean" />
        <attr name="mrl_rippleRoundedCorners" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="cover_border_width" format="dimension" />
        <attr name="cover_border_color" format="color" />
        <attr name="round_background" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="cp_circleColor" format="color" />
        <attr name="cp_circleProgressColor" format="color" />
        <attr name="cp_circleWidth" format="dimension" />
        <attr name="cp_textColor" format="color" />
        <attr name="cp_textSize" format="dimension" />
        <attr name="cp_max" format="integer" />
        <attr name="cp_textIsDisplayable" format="boolean" />
        <attr name="cp_style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MySwipeRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>
</resources>